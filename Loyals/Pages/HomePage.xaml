<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:local="clr-namespace:Loyals" 
    x:Class="Loyals.HomePage" 
    BackgroundColor="{StaticResource BackgroundColor}">
    
	<ListView x:Name="list" ItemsSource="{}" ItemTapped="OnItemSelected" RowHeight="55">
		<ListView.ItemTemplate>
            <DataTemplate>
                <ImageCell>
                    
                    <Grid Padding="5">
                        
                        <Grid.RowDefinitions>
                            <RowDefinition Height="45"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                            
                    </Grid>

                     <Label Grid.Row="0" Grid.Column="0" Text="{Binding Name}" LineBreakMode="TailTruncation"></Label>

                    

                    
                </ImageCell>
            </DataTemplate>
		</ListView.ItemTemplate>
	</ListView>
</ContentPage>